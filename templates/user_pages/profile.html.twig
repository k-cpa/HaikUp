{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<section class="user_profile">
    <div class="background_size max-w-site">
        <div class="profile_hero">
            <div class="follow">
                <p>{{followersCount}} abonné.es | {{followsCount}} abonnements</p>
            </div>
            <div class="title">
                <h2>{{app.user.username}}</h2>        
                <p>Description de sa page à faire (gérer controller)</p>
            </div>
        </div>
        {# {% for collection in collections %}
            <a href="">
                <div class="collection_container">
                    <p>{{ collection.name }}</p>
                </div>
            </a>
        {% endfor %} #}
        <div class="user_haiku">
            <div class="title">
                <h2>Mes Haïkus</h2>
                <p>{{totalHaikus}} haïkus</p>
            </div>
            {% for haiku in haikus %}
                <div class="haiku">
                    <div class="content">
                        <p>{{haiku.content}}</p>
                    </div>
                </div>
            {% endfor %}
            <div class="cta">
                <a href="">Lire mon recueil</a>
            </div>
        </div>
        <div class="user_likes">
            <div class="title">
                <h2>Mes likes</h2>
            </div>
        </div>
    </div>
</section>    
{% endblock %}
