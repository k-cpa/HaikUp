<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Inclure le token CSRF dans le meta tag pour l'utiliser dans le JavaScript -->
        <meta name="csrf-token" content="{{ csrf_token('ajax') }}">
        
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
        {% block header %}
            <header>
                <div class="logo_wrapper">
                    <a href="{{ path(is_granted('ROLE_USER') ? 'app_feed' : 'app_landing') }}">
                        <img src="{{asset('img/logo.svg')}}" alt="Logo de Haikup">            
                    </a>
                </div>
                <div class="off_screen_menu">
                    <nav>
                        <ul>
                            <div class="nav_links">
                                {% if is_granted('ROLE_USER') %}
                                    <li><a href="{{path('app_user_profile')}}" class="material-icons">account_box</a></li>    
                                    <li><a href="{{ path('app_feed') }}" class="material-icons">auto_stories</a></li>
                                    <li><a href="{{ path('app_word_sent') }}" class="material-icons">send</a></li>
                                    <li><a href="{{ path('app_create_haiku') }}" class="material-icons">notifications</a></li>
                                {% else %}
                                    <li><a href="{{path('app_landing')}}">Accueil</a></li>    
                                {% endif %}
                            </div>
                            <div class="log_links">
                                {% if is_granted('ROLE_USER') %}
                                    <li><a href="{{path('app_logout')}}" class="logout">Déconnexion</a></li>
                                {% else %}
                                    <li><a href="{{path('app_signup')}}" class="signup">Inscription</a></li>
                                    <li><a href="{{path('app_login')}}" class="login">Connexion</a></li>
                                {% endif %}
                            </div>
                        </ul>
                    </nav>
                </div>     
                <div class="ham_wrapper">
                    <div class="ham_burger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </header>
        {% endblock %}
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
     {% block footer %}
        <footer>
            <div class="container">
                <div class="logo_wrapper">
                    <img src="{{asset('img/logo-big.svg')}}" alt="Logo haikup">
                </div>
                <div class="footer_nav">
                    <nav>
                        <ul>
                            <li><a href="">Politiques de confidentialité</a></li>
                        </ul>
                        <ul>
                            <li><a href="">Mentions légales</a></li>
                        </ul>
                        <ul>
                            <li><a href="">Whatever I need ?</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </footer>
    {% endblock %}
</html>
