{% extends 'base.html.twig' %}

{% block title %}Haikup{% endblock %}

{% block body %}
<main class="login_signup">
	{# Icone retour en arrière #}
	<div class="close_btn">
		<a href="{{ path(is_granted('ROLE_USER') ? 'app_feed' : 'app_landing') }}" class="material-icons">arrow_back</a>
	</div>
    <div class="element_container">
        <div class="title_form_contact">
            <h2>Contactez-nous</h2>
            <p>Une question, un conseil ou besoin d'assistance ? <span>Nous sommes à votre écoute !</span></p>
        </div>
        <div class="contact_form">
            {{ form_start(contactForm) }}
                {{ form_row(contactForm.nom) }}
                {{ form_row(contactForm.email) }}
                {{ form_row(contactForm.message) }}
                {{ form_row(contactForm.submit) }}
            {{ form_end(contactForm) }}
        </div>
    </div>
</main>
{% endblock %}
