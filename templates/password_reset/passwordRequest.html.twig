{% extends 'base.html.twig' %}

{% block title %}Demande de mot de passe{% endblock %}

{% block body %}
<main class="login_signup">
    <div class="element_container">
        <div class="title_form">
            <h2>Demande de mot de passe</h2>
        </div>
    </div>
    {# Formulaire de demande de récup mdp #}
    {{form_start(resetRequestForm)}}
        {{form_row(resetRequestForm.email)}}
        {{form_row(resetRequestForm.submit)}}
    {{form_end(resetRequestForm)}}
    <div class="login_link">
        <a href="{{ path('app_login') }}">Revenir à l'écran de connexion</a>
    </div>
</main>
{% endblock %}
